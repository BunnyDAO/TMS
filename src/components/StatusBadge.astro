---
interface Props {
  status: 'hot' | 'trending' | 'new' | 'stable';
}

const { status } = Astro.props;

const badges: Record<string, { label: string; prefix: string; class: string; dot: string }> = {
  hot: {
    label: 'HOT',
    prefix: '>>>',
    class: 'border-red-500/20 text-red-400',
    dot: 'bg-red-500 badge-hot',
  },
  trending: {
    label: 'TRENDING',
    prefix: '>>',
    class: 'border-amber-400/20 text-amber-400',
    dot: 'bg-amber-400',
  },
  new: {
    label: 'NEW',
    prefix: '>',
    class: 'border-green-400/20 text-green-400',
    dot: 'bg-green-400',
  },
  stable: { label: '', prefix: '', class: '', dot: '' },
};

const badge = badges[status];
---

{badge.label && (
  <span class:list={['inline-flex items-center gap-1.5 rounded border px-2 py-0.5 font-mono text-[10px] font-bold tracking-wide', badge.class]}>
    <span class:list={['inline-block h-1 w-1 rounded-full', badge.dot]}></span>
    {badge.label}
  </span>
)}
